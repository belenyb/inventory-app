<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<main class="form-signin w-100 m-auto text-center p-5 bg-dark rounded-4">
  <form data-bitwarden-watching="1">
    <%= image_tag("favicon.ico", width: "60") %>
    <h1 class="h4 mb-3 fw-normal text-light mt-3">Iniciar sesi√≥n</h1>

    <div class="form-floating mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "floatingInput", class: "form-control", placeholder: "Email" %>
      <%= f.label :email %>
    </div>

    <div class="form-floating mb-3">
      <%= f.password_field :password, autocomplete: "current-password", id: "floatingPassword", class: "form-control", placeholder: "Password" %>
      <%= f.label :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3 d-flex justify-content-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text-light ms-2" %>
      </div>
    <% end %>
    <%= f.submit "Log in", class: "w-100 btn btn-lg btn-info" %>
    <div class="mt-3 text-light">
      <%= render "devise/shared/links" %>
    </div>
  </form>
</main>
<% end %>
