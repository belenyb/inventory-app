<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <main class="form-signin w-100 m-auto text-center p-5 bg-dark rounded-4">
    <form data-bitwarden-watching="1">
      <%= image_tag("favicon.ico", width: "60") %>
      <h1 class="h4 mb-3 fw-normal text-light mt-3">Recuperar contrase√±a</h1>

      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "floatingInput", class: "form-control", placeholder: "Email" %>
        <%= f.label :email %>
      </div>

      <div class="actions">
        <%= f.submit "Enviar", class: "w-100 btn btn-lg btn-info" %>
      </div>

      <div class="mt-3 text-light">
        <%= render "devise/shared/links" %>
      </div>
    </form>
  </main>
<% end %>
