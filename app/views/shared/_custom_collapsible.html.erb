<div class="card mb-4">
  <div class="card-body">
    <a data-bs-toggle="collapse" href="#<%= title %>" role="button" aria-expanded="false" aria-controls=<%= title %> class="collapse-button text-reset text-decoration-none">
      <div class="row align-items-center">
        <div class="col d-flex flex-row align-items-center">
          <div class="p-2"><%= get_title_emoji(title) %></div>
          <h5 class="card-title mb-0"><%= title %></h5>
        </div>
        <div class="col-auto text-end">
          <i class="bi bi-chevron-down"></i>
        </div>
      </div>
    </a>
    <div class="collapse" id=<%= title %>>
      <div class="card card-body border-0 px-0">
        <ul class="mb-0">
          <% items.first(5).each do |item| %>
            <li>
              <%= item.item_name %>
            </li>
          <% end %>
        </ul>
        <% if items.size > 5 %>
          <div class="mt-2 text-end">
            <%= link_to "Ver mÃ¡s", category_path(title.downcase), class: "link-offset-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
