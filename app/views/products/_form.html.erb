<%= form_with url: url, model: @item, method: method, class: "product-form", local: true do |form| %>
  <div class="form-group mb-3">
    <%= form.label :item_name, "Nombre" %>
    <%= form.text_field :item_name, class: "form-control", name: "item[item_name]" %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :description, "Descripción" %>
    <%= form.text_area :description, class: "form-control", name: "item[description]" %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :brand, "Marca" %>
    <%= form.text_field :brand, class: "form-control", name: "item[brand]" %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :sku, "SKU" %>
    <%= form.text_field :sku, class: "form-control", name: "item[sku]" %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :category, "Categoría" %>
    <%= form.select :category, options_for_select(@items_by_category.keys.map { |category| [category.capitalize, category] }), {}, { class: "form-control", name: "item[category]" } %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :quantity_on_hand, "Stock" %>
    <%= form.number_field :quantity_on_hand, class: "form-control", name: "item[quantity_on_hand]" %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :sale_price_per_unit, "Precio" %>
    <%= form.number_field :sale_price_per_unit, class: "form-control", name: "item[sale_price_per_unit]" %>
  </div>
  <%= form.submit "Guardar", class: "btn btn-primary" %>
<% end %>
